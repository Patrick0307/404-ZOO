# Solana RPC URL (optional, defaults to devnet)
SOLANA_RPC_URL=https://api.devnet.solana.com

# Authority private key (base58 encoded)
# This is the game admin wallet that has authority over the contract
# Generate with: solana-keygen new --outfile authority.json
# Then convert to base58: cat authority.json | node -e "const fs=require('fs');const bs58=require('bs58');console.log(bs58.encode(Buffer.from(JSON.parse(fs.readFileSync(0,'utf8')))))"
AUTHORITY_PRIVATE_KEY=your_base58_private_key_here

# Server port
PORT=8080
